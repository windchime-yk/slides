{
  "name": "slides",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-slide": "deno run --allow-run=pnpm,deno --allow-write --allow-read --allow-env scripts/create.ts",
    "dev": "deno run --allow-run=pnpm --allow-read --allow-env scripts/dev.ts",
    "build": "rimraf dist && pnpm -r build && tsx index.tsx",
    "preview": "live-server dist/index.html",
    "export": "pnpm -r export",
    "fmt": "deno fmt --ignore=README.md,*/**/*.md"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.0-beta.4",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "preact": "^10.22.0",
    "preact-render-to-string": "^6.5.5",
    "vue": "^3.4.22"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "live-server": "^1.2.2",
    "playwright-chromium": "^1.43.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.15.7"
  }
}
